@model IEnumerable<projetIntegrateur.Models.Bloc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdresseBloc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbEtages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contracteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnneeConstruction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageBloc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AdresseBloc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NbEtages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contracteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnneeConstruction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageBloc)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdBloc">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdBloc">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdBloc">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
